<div class="page-header">
  <h3>User:<%= @user.username %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <li>Username: <%= @user.username %> </li>
    <li>Email: <%= @user.email %></li>

    <table class="table table-striped table-hover">
      <tr>
        <th> Photo </th>
        <th> Caption </th>
      </tr>

      <% @photos.each do | photo | %>
      <tr>
        <td><img src= "<%= photo.image %>"></td>
        <td>photo.caption</td>
      </tr>
      <% end %>

    </table>


  </div>
</div>
